{{> header}}
<style type="text/css">
* {margin: 0; padding: 0;}
#container {width:100%; font-size: 0;}
table {padding: 4}
#hardleft, #left, #leftmiddle, #rightmiddle, #right, #hardright { padding: 4; display: inline-block; *display: inline; zoom: 1; vertical-align: top; font-size: 12px;    }
#hardleft {width: 16%; background: #fadbc8;}
#left {width: 16%; background: #fadbc8;}
#leftmiddle {width: 16%; background: #ddeeff;}
#rightmiddle {width: 16%; background: #ddeeff;}
#right {width: 16%; background: #fff0f5;}
#hardright {width: 16%; background: #fff0f5;}
#{{selected}} {background: #ee9086;}
</style>
<h1>{{title}}</h1>

{{#players}}
    <h2>{{name}} (id: {{id}}) {{info}}</h2>
    {{#seasonStats}}
        <div id="container">
            <div id="hardleft">
                <h3>Solo</h3>
                {{#solo}}
                    {{> stats}}
                {{/solo}}
            </div>
            <div id="left">
                <h3>Solo (FPP)</h3>
                {{#solofpp}}
                    {{> stats}}
                {{/solofpp}}
            </div>
            <div id="leftmiddle">
                <h3>Duo</h3>
                {{#duo}}
                    {{> stats}}
                {{/duo}}
            </div>
            <div id="rightmiddle">
                <h3>Duo (FPP)</h3>
                {{#duofpp}}
                    {{> stats}}
                {{/duofpp}}
            </div>
            <div id="right">
                <h3>Squad</h3>
                {{#squad}}
                    {{> stats}}
                {{/squad}}
            </div>
            <div id="hardright">
                <h3>Squad (FPP)</h3>
                {{#squadfpp}}
                    {{> stats}}
                {{/squadfpp}}
            </div>
        </div>
    {{/seasonStats}}
{{/players}}
{{^players}}
    <h3>No players found</h3>
{{/players}}


{{> footer}}